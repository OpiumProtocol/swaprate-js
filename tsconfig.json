{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"],
  "typedocOptions": {
    "inputFiles": "src/index.ts",
    "mode": "library",
    "out": "docs",
    "name": "SwapRate JS SDK"
  }
}
